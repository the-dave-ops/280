services:
  # PostgreSQL Database
  db:
    image: postgres:15-alpine
    container_name: optometry-db
    environment:
      POSTGRES_USER: optometry_user
      POSTGRES_PASSWORD: optometry_pass
      POSTGRES_DB: optometry_db
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./database/init.sql:/docker-entrypoint-initdb.d/init.sql
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U optometry_user -d optometry_db"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Backend API
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: optometry-backend
    environment:
      NODE_ENV: development
      DATABASE_URL: postgresql://optometry_user:optometry_pass@db:5432/optometry_db
      PORT: 3001
      FRONTEND_URL: http://localhost:3000
      ADMIN_EMAIL: ${ADMIN_EMAIL:-admin@example.com}
      ADMIN_PASSWORD: ${ADMIN_PASSWORD:-admin123}
      SKIP_AUTH: ${SKIP_AUTH:-true}
      ADMIN_DELETE_PASSWORD: ${ADMIN_DELETE_PASSWORD:-admin123}
    ports:
      - "3001:3001"
    volumes:
      - ./backend:/app
      - /app/node_modules
    depends_on:
      db:
        condition: service_healthy
    command: npm run dev

  # Frontend
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: optometry-frontend
    environment:
      VITE_API_URL: http://localhost:3001
    ports:
      - "3000:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
    depends_on:
      - backend
    command: npm run dev

volumes:
  postgres_data:

